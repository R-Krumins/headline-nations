version: 1

formatters:
  simple:
    format: '%(asctime)s - %(levelname)s - %(name)s: %(message)s'

handlers:
  file:
    class: logging.handlers.TimedRotatingFileHandler
    filename: logs/log.log
    level: INFO
    formatter: simple
  console:
    class: logging.StreamHandler
    level: DEBUG
    formatter: simple
    stream: ext://sys.stdout



root:
  handlers: [console, file]
  level: DEBUG

